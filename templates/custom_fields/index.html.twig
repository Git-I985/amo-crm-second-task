<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Choose entity</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <style>
        .col.s12 > .btn {
            width: 100%;
        }

        .container {
            margin-top: 200px;
        }

        body {
            overflow: hidden; /* Hide scrollbars */
            /*transition: all 3s ease;*/
        }

        /*@keyframes fadeOut {*/
        /*    from { opacity: 1; }*/
        /*    to { opacity: 0; }*/
        /*}*/
        .push-notification {
            position: fixed;
            top: 0;
            left: 50%;
            right: 50%;
            width: 500px;
            transform: translateX(-50%);
            padding: 20px;
            border-radius: 5px;
            color: gray;
            animation: 3s fade-out;
            animation-fill-mode: forwards;
            animation-delay: 3s;
        }
        @keyframes fade-out {
            from {
                opacity: 1;
                visibility: visible;
            }
            to {
                opacity: 0;
                visibility: hidden;
            }
        }
    </style>
</head>
<body>


{% for error in app.flashes('error') %}
    <blockquote class="push-notification">error</blockquote>
{% endfor %}

<div class="container row">
    <form action="{{ path('custom_fields_selected_entity') }}" method="POST">
        <div class="input-field col s12 m12 l6 offset-l3">
            <select name="entity">
                <option value="" disabled selected>Выберете сущность</option>
                {% for entity in entities %}
                    <option value="{{ entity|lower }}">{{ entity }}</option>
                {% endfor %}
            </select>
            <label>Сущность</label>
        </div>
        <div class="input-field col s12 m12 l6 offset-l3">
            <button type="submit" class="btn waves-effect teal lighten-1">Далее</button>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script>
    $(document).ready(function () {
        $('select').formSelect();
    });
</script>

</body>
</html>